    <script src="~/Scripts/Tables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/Tables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/all.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
</body>
</html>
