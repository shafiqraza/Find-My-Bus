<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/dataTables.bootstrap4.min.css" />

    <link href="~/Content/all.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <link href="~/Content/flexslider.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/main.css" rel="stylesheet" />
    <link href="~/Content/ionicons.css" rel="stylesheet" />
    <link href="~/Content/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/owl.theme.css" rel="stylesheet" />

    <style>
        /* Make the image fully responsive */
        .carousel-inner img {
            width: 100%;
            height: 100%;
        }
    </style>
    <title>@ViewBag.Title - Find My Bus</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" id="header" >
        <a class="navbar-brand" href="/Home/Index">Find My Bus</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item ">
                    <a class="nav-link" href="/Home/index">Home</a>
                </li>
                @if (!User.IsInRole("Admin") && !User.IsInRole("Employee"))
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/BusBookings/Index">My Bookings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/BusRoutes/Index">Find Bus</a>
                    </li>
                }
                
                @if (User.IsInRole("Employee"))
                {

                    <li class="nav-item">
                        <a class="nav-link" href="/buses/Index">Buses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/BusBookings/Index">Bus Bookings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/BusRoutes/Index">Bus Routes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Drivers/Index">Driver</a>
                    </li>
                }

                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/buses/Index">Buses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/BusBookings/Index">Bus Bookings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/BusRoutes/Index">Bus Routes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Drivers/Index">Driver</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Logins/Index">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/LoginRoles/Index">Roles</a>
                    </li>
                    
                }
             
            </ul>
            <ul class="navbar-nav ml-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a href="/Logins/ChangePassword" class="nav-link">@User.Identity.Name</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Logins/Logout" class="nav-link">Log out</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Logins/Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Logins/Signup">Signup</a>
                    </li>
                }
            </ul>
        </div>
    </nav>
    @*<div class="container-fluid body-content bg-dark">*@  
            @RenderBody()
           
            <div class="subscribe section-wrapper bg-light">
                <a class="brand-logo" href="/Home/index" title="HOME"><span><img src="~/images/Untitled-1-02.png" height="80" width="80" /></span>  <span> Find My Bus</span></a>
                <p class="subscribe-now">
                    Subscribe to our Newsletter
                </p>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
                            <div class="input-group">
                                <input type="email" class="form-control border-radius" placeholder="Email address">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary ml-2 " type="button">DONE</button>
                                </span>
                            </div><!-- /input-group -->
                        </div>
                    </div>
                </div>



                <ul class="social-icon">
                    <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fab fa-facebook-square"></i></a></li>
                    <li><a href="#"><i class="fab fa-linkedin"></i></a></li>
                    <li><a href="#"><i class="fab fa-google-plus-square"></i></a></li>
                </ul>
            </div> <!-- /.subscribe -->


            <footer>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-4">
                            <div class="text-left">
                                &copy; Copyright Find My Bus
                            </div>
                        </div>

                        <div class="col-xs-4 offset-9">
                            <div class="top">
                                <a href="#header">
                                    <i class="fas fa-arrow-up"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        @*</div>*@

   

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

