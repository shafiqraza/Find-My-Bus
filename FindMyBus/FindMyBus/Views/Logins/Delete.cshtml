@model FindMyBus.Models.Login

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <h3 class="mt-4">Are you sure you want to remove this?</h3>
    <div>
        <hr />
        <a href="/Logins/Index" class="btn btn-warning mb-3" title="Back to list"><i class="fas fa-long-arrow-alt-left"></i> </a>
        <table id="" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.Contact)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Contact)
                    </td>
                </tr>
            </tbody>
        </table>


        <div class="row mt-5">
            <div class="col-md-2">
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn-danger" style="width:100%;border:none;padding:0.5rem;border-radius:3px" />

                    </div>
                }
            </div>
        </div>
    </div>

</div>