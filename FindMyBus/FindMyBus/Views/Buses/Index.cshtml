@model IEnumerable<FindMyBus.Models.Bus>

@{
    ViewBag.Title = "Index";
}
<div class="container">


    <p>
        <a href="/Buses/Create" class="btn btn-primary mt-3 mb-0">Add New Bus</a>
    </p>
    <div class="mt-5">
        <table id="example" class="table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Number)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalSeats)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalSeats)
                        </td>
                        <td>
                            <a href="/Buses/Edit/@(String.Format("{0}", item.Id))" class="btn btn-success" title="Edit"><i class="fas fa-edit"></i></a>
                            <a href="/Buses/Details/@(String.Format("{0}", item.Id))" class="btn btn-info" title="Details"><i class="far fa-list-alt"></i></a>
                            <a href="/Buses/Delete/@(String.Format("{0}", item.Id))" class="btn btn-danger" title="Delete"><i class="fas fa-trash-alt"></i></a>

                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Number)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalSeats)
                    </th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
    </div>

</div>