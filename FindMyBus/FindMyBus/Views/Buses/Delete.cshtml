@model FindMyBus.Models.Bus

@{
    ViewBag.Title = "Delete";
}

<div class="container">

    <h3 class="mt-4">Are you sure you want to remove this Bus ?</h3>
    <hr />
    <div>

        <a href="/Buses/Index" class="btn btn-warning mb-3" title="Back to list"><i class="fas fa-long-arrow-alt-left"></i> </a>
        <table id="" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    <th>
                        @Html.DisplayNameFor(model => model.Number)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.TotalSeats)
                    </th>


                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.TotalSeats)
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="row mt-5">
            <div class="col-md-2">
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn-danger" style="width:100%;border:none;padding:0.5rem;border-radius:3px" />

                    </div>
                }
            </div>
        </div>

    </div>
</div>
