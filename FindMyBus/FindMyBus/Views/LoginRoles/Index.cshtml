@model IEnumerable<FindMyBus.Models.LoginRoles>

@{
    ViewBag.Title = "Index";
}
<div class="container">

    <p>
        <a href="/LoginRoles/Create" class="btn btn-primary mt-3 mb-0">Add New Driver</a>
    </p>
    <table id="example" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Login.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>

                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Login.FullName)
                        <kbd>@Html.DisplayFor(modelItem => item.Login.Id)</kbd>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>

                    <td>
                        <a href="/LoginRoles/Edit/@(String.Format("{0}", item.Id))" class="btn btn-success" title="Edit"><i class="fas fa-edit"></i></a>
                        <a href="/LoginRoles/Details/@(String.Format("{0}", item.Id))" class="btn btn-info" title="Details"><i class="far fa-list-alt"></i></a>
                        <a href="/LoginRoles/Delete/@(String.Format("{0}", item.Id))" class="btn btn-danger" title="Delete"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Login.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>

                <th>Action</th>
            </tr>
        </tfoot>



    </table>

</div>