@model IEnumerable<FindMyBus.Models.BusBooking>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
    {
        <p>
            <a href="/BusBookings/Create" class="btn btn-primary mt-3 mb-0">Add New Request</a>
        </p>
    }
    <div class="mt-5">
        <table id="example" class="table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NoOfSeats)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Login.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bus.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BusRoute.Depature)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.BusRoute.Arrival)</th>
                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                    {
                        <th>Action</th>
                    }

                </tr>
            </thead>
            <tbody>



                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoOfSeats)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Login.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bus.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BusRoute.Depature)
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.BusRoute.Arrival)</td>
                        @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                {
                            <td>
                                <a href="/BusBookings/Edit/@(String.Format("{0}", item.Id))" class="btn btn-success" title="Edit"><i class="fas fa-edit"></i></a>
                                <a href="/BusBookings/Details/@(String.Format("{0}", item.Id))" class="btn btn-info" title="Details"><i class="far fa-list-alt"></i></a>
                                <a href="/BusBookings/Delete/@(String.Format("{0}", item.Id))" class="btn btn-danger" title="Delete"><i class="fas fa-trash-alt"></i></a>
                                @*<i class="fas fa-edit">@Html.ActionLink("", "Edit", new { id = item.Id })</i> |*@
                                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                            </td>
                        }
                    </tr>

                }

            </tbody>
            <tfoot>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NoOfSeats)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Login.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bus.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BusRoute.Depature)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.BusRoute.Arrival)</th>
                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                    {
                        <th>Action</th>
                    }
                </tr>
            </tfoot>
        </table>

    </div>


</div>
