@model FindMyBus.Models.BusBooking

@{
    ViewBag.Title = "Delete";
}
<div class="container">

    <h3 class="mt-4">Are you sure you want to remove this Bus Booking?</h3>
    <div>

        <hr />


        <a href="/BusBookings/Index" class="btn btn-warning mb-3" title="Back to list"><i class="fas fa-long-arrow-alt-left"></i> </a>
        <table id="" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NoOfSeats)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Login.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bus.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BusRoute.Depature)
                    </th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.NoOfSeats)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.DateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Login.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Bus.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BusRoute.Depature)
                    </td>

                </tr>
            </tbody>
        </table>
        <div class="row mt-5">
            <div class="col-md-2">
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn-danger" style="width:100%;border:none;padding:0.5rem;border-radius:3px" />

                    </div>
                }
            </div>
        </div>

    </div>

</div>
