@model IEnumerable<FindMyBus.Models.Driver>

@{
    ViewBag.Title = "Index";
}


<div class="container">


    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
    {
        <p>
            <a href="/Drivers/Create" class="btn btn-primary mt-3 mb-0">Add New Driver</a>
        </p>
    }
    <div class="mt-5">
        <table id="example" class="table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bus.Name)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bus.Name)
                        </td>
                        <td>
                            <a href="/Drivers/Edit/@(String.Format("{0}", item.Id))" class="btn btn-success" title="Edit"><i class="fas fa-edit"></i></a>
                            <a href="/Drivers/Details/@(String.Format("{0}", item.Id))" class="btn btn-info" title="Details"><i class="far fa-list-alt"></i></a>
                            <a href="/Drivers/Delete/@(String.Format("{0}", item.Id))" class="btn btn-danger" title="Delete"><i class="fas fa-trash-alt"></i></a>

                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bus.Name)
                    </th>
                    <th>Action</th>
                </tr>
            </tfoot>


        </table>

    </div>

</div>